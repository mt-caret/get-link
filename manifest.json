{
  "manifest_version": 2,
  "name": "get-link",
  "version": "1.0",
  "developer": {
    "name": "mt_caret",
    "url": "https://github.com/mt-caret/get-link"
  },
  "description": "Copies Markdown link to clipboard",
  "icons": {
    "48": "icons/link_black.svg",
    "96": "icons/link_black.svg"
  },
  "browser_action": {
    "default_icon": "icons/link_black.svg",
    "default_title": "get-link",
    "theme_icons": [{
      "light": "icons/link_white.svg",
      "dark": "icons/link_black.svg",
      "size": 16
    }, {
      "light": "icons/link_white.svg",
      "dark": "icons/link_black.svg",
      "size": 32
    }]
  },
  "background": {
    "scripts": [ "background.js" ]
  },
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ]
}
